@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Security/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Login";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <div class="login100-pic js-tilt margin-50" data-tilt>
                <img src="~/images/app_images/img-01.png" alt="IMG">
            </div>
            <div class="login100-form">
                <form asp-area="Security" asp-controller="Account" asp-action="Login" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <span class="login100-form-title">
                        Member Login
                    </span>
                    <div class="wrap-input100">
                        <input asp-for="UserName" class="input100" placeholder = "User Name"  />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fas fa-user"></i>
                        </span>
                    </div>
                    <div class="wrap-input100">
                        <input asp-for="Password" class="input100" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>
                    <div class="wrap-input100">
                        <input type="checkbox" asp-for="IsChecked" class="control-label"/>
                        <label class="form-label">Remember Me</label>
                    </div>
                    <div class="wrap-input100">
                        <asp:Label ID="lblMsg" runat="server" Text="" ForeColor="Red"></asp:Label>
                    </div>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">Sing In</button>
                    </div>
                    </form>
                    <div class="text-center p-t-12">
                        <span class="txt1">
                            Forgot
                        </span>
                        <a class="txt2" href="#">
                            Username / Password?
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a asp-area="Security" asp-controller="Account" asp-action="Singup">
                            Create your Account
                            <i class="fas fa-long-arrow-alt-right  m-l-5" style="font-size: 12px;"></i>
                        </a>
                    </div>
            </div>
        </div>
    </div>
</div>


