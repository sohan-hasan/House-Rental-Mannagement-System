@model UserModelView
@{
    ViewData["Title"] = "Singup";
    Layout = "~/Areas/Security/Shared/_Layout.cshtml";
}
<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100" style="padding: 74px 130px 33px 95px;">
            <div class="login100-pic reg100-pic js-tilt" data-tilt>
                <img src="~/images/app_images/img-01.png" alt="IMG">
            </div>
            <div class="login100-form">
                <form asp-area="Security" asp-controller="Account" asp-action="Singup" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <span class="login100-form-title">
                        User Registration
                    </span>
                    <div class="wrap-input100">
                        <input asp-for="FirstName" class="input100" placeholder="First Name" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="far fa-user"></i>
                        </span>
                    </div>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    <div class="wrap-input100">
                        <input asp-for="LastName" class="input100" placeholder="Last Name" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="far fa-user"></i>
                        </span>
                    </div>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                    <div class="wrap-input100">
                        <input asp-for="UserName" class="input100" placeholder="User Name" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="far fa-user"></i>
                        </span>
                    </div>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <div class="wrap-input100">
                        <input asp-for="Phone" class="input100" placeholder="Phone" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="far fa-user"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                    <div class="wrap-input100">
                        <input asp-for="Email" class="input100" placeholder="Email" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="far fa-user"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    <div class="wrap-input100">
                        <label asp-for="Photo" class="form-label mb-3"></label>
                        <img src="~/images/no-image.png" style="height:90px!important; width:auto!important;" class="form-control change_edit mb-3" asp-append-version="true" />
                        <input asp-for="Photo" class="form-control change_image" type="file" required />
                    </div>
                    <div class="wrap-input100">
                        <input asp-for="Password" class="input100" placeholder="Password" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="far fa-user"></i>
                        </span>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <div class="wrap-input100">
                        <input asp-for="RepeatPassword" class="input100" placeholder="Repeat Password" />
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="far fa-user"></i>
                        </span>
                    </div>
                    <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">Sing Up</button>
                    </div>
                </form>
                <div class="text-center p-t-12">
                    <a asp-area="Security" asp-controller="Account" asp-action="Login" class="txt2  cursor_pointer">
                        Login your Account
                        <i class="fas fa-long-arrow-alt-right  m-l-5" style="font-size: 12px;"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

