@model TenantViewModel
<form enctype="multipart/form-data" asp-action="Create" method="post" id="form">
    <div class="col-md-12 mx-auto">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="TenantFirstName" class="form-label"></label>
            <input asp-for="TenantFirstName" class="form-control" />
            <span asp-validation-for="TenantFirstName" class="text-danger"></span>
        </div>
        <div class="form-group position-relative mb-3">
            <label asp-for="TenantLastName" class="form-label"></label>
            <input asp-for="TenantLastName" class="form-control" />
            <span asp-validation-for="TenantLastName" class="text-danger"></span>
        </div>
        <div class="form-group position-relative mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group position-relative mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input asp-for="DateOfBirth" class="form-control" value="" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <div class="wrapper">
                <input type="radio" value="0" asp-for="GenderCreate" checked>
                <input type="radio" value="1" name="GenderCreate" id="option-2">
                <label for="GenderCreate" class="option option-1">
                    <span class="dot"></span>
                    <span>Female</span>
                </label>
                <label for="option-2" class="option option-2">
                    <span class="dot"></span>
                    <span>Male</span>
                </label>
            </div>
        </div>
        <div class="form-group mb-3">
            <label asp-for="OtherTenantDetails" class="form-label"></label>
            <textarea asp-for="OtherTenantDetails" class="form-control" text-wrap:normal" type="text" placeholder="Write here (Optional)"></textarea>
            <span asp-validation-for="OtherTenantDetails" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Photo" class="form-label mb-3"></label>
            <img src="~/images/app_images/no-image.png" style="height:90px!important; width:auto!important;" class="form-control changeEdit mb-3" asp-append-version="true" />
            <input asp-for="Photo" class="form-control imageChange" type="file" required />
        </div>
        <div class="form-group mb-3">
            <input type="submit" value="Save" class="btn btn_modal" />
            <input type="button" value="Close" data-bs-dismiss="modal" class="btn btn_modal_close" />
        </div>
    </div>
</form>