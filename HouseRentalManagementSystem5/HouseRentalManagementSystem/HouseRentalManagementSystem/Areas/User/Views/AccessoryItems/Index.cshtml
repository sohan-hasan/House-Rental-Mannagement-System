            contentType: 'application/json; charset = utf-8',
            success: function (data) {
                $('#StatusEditDiv').show();
                $('#StatusEditDiv').html(data);
            },
            error: function () {
                alert("Error occured")
            }
        })
    }
    function PaymentTypeUpdate(id) {
        $.ajax({
            url: "/User/AccessoryItems/PaymentTypeEdit?id=" + id,
            type: "GET",
            data: "",
            contentType: 'application/json; charset = utf-8',
            success: function (data) {
                $('#PaymentTypeEditDiv').show();
                $('#PaymentTypeEditDiv').html(data);
            },
            error: function () {
                alert("Error occured")
            }
        })
    }
</script>
