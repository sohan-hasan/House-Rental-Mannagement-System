            </div>
        </div>
    </div>
</div>
<script>
    function Clear() {
        $(this).closest('form').find("input[type=text], textarea").val("");
    }

    function TypeUpdate(id) {
        $.ajax({
            url: "/User/AccessoryItems/TypeEdit?id=" + id,
            type: "GET",
            data: "",
            contentType: 'application/json; charset = utf-8',
            success: function (data) {
                $('#TypeEditDiv').show();
                $('#TypeEditDiv').html(data);
            },
            error: function () {
                alert("Error occured")
            }
        })
    }

    function FacilityUpdate(id) {
        $.ajax({
            url: "/User/AccessoryItems/FacilityEdit?id=" + id,
            type: "GET",
            data: "",
            contentType: 'application/json; charset = utf-8',
            success: function (data) {
                $('#FacilityEditDiv').show();
                $('#FacilityEditDiv').html(data);
            },
            error: function () {
