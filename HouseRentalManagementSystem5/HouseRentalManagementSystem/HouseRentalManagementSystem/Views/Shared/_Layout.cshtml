<!DOCTYPE html>
<html lang="en">
<head>

    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Meta -->
    <meta name="description" content="">
    <meta name="author" content="Themepixels">

    <link rel="icon" type="image/png" href="~/images/app_images/favicon.png" />
    <title>DashNav - Dashboard Sidebar Navigation</title>


    <!--CSS Link-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link href="~/lib/remixicon/fonts/remixicon.css" rel="stylesheet">
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/assets/css/style.min.css">
    <link href="~/Custom/css/styles.css" rel="stylesheet" />



    <!--Jquery Link-->
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/jquery-validate/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/feathericons/feather.min.js"></script>
    <script src="~/lib/perfect-scrollbar/perfect-scrollbar.min.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/Custom/js/main.js"></script>

</head>
<body class="skin-base animate">

    @{ if (User.Identity.IsAuthenticated)
        {
            <div class="sidebar minimized">
                <div class="sidebar-header">
                    <a asp-area="Common" asp-controller="Home" asp-action="Dashboard" class="sidebar-logo"><span></span></a>
                    <a asp-area="Common" asp-controller="Home" asp-action="Dashboard" class="sidebar-logo-text">House<span>Rental</span></a>
                </div><!-- sidebar-header -->
                <div class="sidebar-body">
                    <nav class="nav-sidebar">
                        <a asp-area="Common" asp-controller="Home" asp-action="Dashboard" class="nav-link active"><i data-feather="package"></i><span>Dashboard</span></a>
                        <a asp-area="User" asp-controller="AccessoryItems" asp-action="Index" class="nav-link"><i data-feather="calendar"></i><span>Accessory Items</span></a>
                        <a asp-area="User" asp-controller="ApartmentBuilding" asp-action="Index" class="nav-link"><i data-feather="monitor"></i><span>Building</span></a>
                        <a asp-area="User" asp-controller="Apartment" asp-action="Index" class="nav-link"><i data-feather="shopping-bag"></i><span>Apartment</span></a>
                        <a asp-area="User" asp-controller="Tenant" asp-action="Index" class="nav-link"><i data-feather="file-text"></i><span>Tenant</span></a>
                        <a asp-area="User" asp-controller="ApartmentBooking" asp-action="Index" class="nav-link"><i data-feather="calendar"></i><span>Booking</span></a>
                        <a asp-controller="Reports" asp-action="Report" class="nav-link"><i data-feather="briefcase"></i><span>Tenants Reports</span></a>
                        <a asp-controller="Reports" asp-action="PaymentReport" class="nav-link"><i data-feather="briefcase"></i><span>Payment Reports</span></a>
                    </nav>

                    @if (User.IsInRole("Admin"))
                    {
                        <hr>
                        <nav class="nav-sidebar">
                            <a asp-area="Security" asp-controller="Users" asp-action="Index" class="nav-link"><i data-feather="users"></i><span>Manage Accounts</span></a>
                            <a asp-area="Security" asp-controller="Roles" asp-action="Index" class="nav-link"><i data-feather="package"></i><span>Manage Roles</span></a>
                        </nav>
                    }
                    <hr>
                    <nav class="nav-sidebar">
                        <a asp-area="Security" asp-controller="Account" asp-action="Singout" class="nav-link"><i data-feather="log-out"></i><span>Sing Out</span></a>
                    </nav>
                </div><!-- sidebar-body -->
                <div class="sidebar-footer">
                    <a href="" class="avatar online"><span class="avatar-initial">s</span></a>
                    <div class="avatar-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <h6 class="text-uppercase">@User.Identity.Name</h6>
                            <a href="" class="footer-menu"><i class="ri-settings-4-line"></i></a>
                        </div>
                        <span>Superuser/Administrator</span>
                    </div><!-- avatar-body -->
                </div><!-- sidebar-footer -->
            </div><!-- sidebar -->
        }
    }
    <div class="content">
        <div class="content-header">
            <a id="contentMenu" href="#" class="content-menu d-none d-lg-flex"><i data-feather="menu"></i></a>
            <a id="mobileMenu" href="#" class="content-menu d-lg-none"><i data-feather="menu"></i></a>
        </div>
        <!-- content-header -->
        <div class="content-body">
            <!--<label class="content-label">Navigation Skins</label>-->
            @RenderBody()
        </div><!-- content-body -->
    </div><!-- content -->
    @RenderSection("Scripts", required: false)
</body>
</html>


